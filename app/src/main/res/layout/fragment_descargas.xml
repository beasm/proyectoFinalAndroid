<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentDescargas">

    <TextView
        android:id="@+id/titulo_descargas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Descarga nuestra app"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imagen_descargas"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_below="@id/titulo_descargas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/icono"
        android:src="@mipmap/icono_app" />

    <TextView
        android:id="@+id/titulo_juego_online"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Juega a nuestra version online"
        android:layout_below="@id/imagen_descargas"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imagen_juego_online"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_below="@id/titulo_juego_online"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/icono"
        android:src="@mipmap/icono_app" />

</RelativeLayout>