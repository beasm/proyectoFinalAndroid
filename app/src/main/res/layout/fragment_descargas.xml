<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".descarga.FragmentDescargas">

    <!-- Titulo del fragment de descargas -->
    <TextView
        android:id="@+id/titulo_descargas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="@string/descarga_movil_string"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <!-- Decripcion del fragment de descargas -->
    <TextView
        android:id="@+id/descripcion_descargas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo_descargas"
        android:layout_marginTop="20sp"
        android:text="Haz click en la imagen para iniciar la descarga"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <!-- Imagen del fragment de descargas -->
    <ImageView
        android:id="@+id/imagen_descargas"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_below="@id/descripcion_descargas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/icono"
        android:src="@drawable/juego_online" />

</RelativeLayout>